# Example configuration for mc-discord-bridge
# Copy this file to `config.ini` and set appropriate values.

[meshcore]
# hostname or IP of your MeshCore instance (required for mesh connection)
MESHCORE_HOSTNAME = 127.0.0.1
PORT = 5000

# meshcore channel to listen to. can be hashtag or private group text channel
# e.g discord or #discord
CHNL_NAME_MESH = #discord

[discord]
# Discord webhook (optional â€” used to post mesh messages to Discord)
DISCORD_WEBHOOK_URL = https://discord.com/api/webhooks/xxxxx/xxxxxxxx

# Discord bot token (required to run the bot)
MSGBOT_TOKEN = your_discord_bot_token_here

# Discord channel ID where the bot listens for commands (numeric)
DISCORD_CHANNEL_ID = 123456789012345678

# Discord DM users allowed to send messages
# Each entry is name=userid where userid is a numeric Discord user ID
[discord_dm_userids]
alice = 123456789
bob = 987654321
